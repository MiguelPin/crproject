<?xml version="1.0" encoding="UTF-8"?>
<widget xmlns		= "http://www.w3.org/ns/widgets"
	xmlns:gap	= "http://phonegap.com/ns/1.0"
	id		= "com.crproject.cr"
	version 	= "0.1.0">
	<name>CR</name>
	<description>
		CR [project] - Beta 0.1.0
	</description>
	<author href="http://cr.i-solucions.com"
		email="miquelpin@gmail.com">
		Miguel Pin 
	</author>

<preference name="prerendered-icon" value="false" />
<icon src="icon.png" width="57" height="57"  gap:role="default"/>
<icon src="assets/icons/icon72.png" gap:platform="ios" width="72" height="72" />
<icon src="assets/icons/iconat2x.png" gap:platform="ios" width="114" height="114" />
<icon src="assets/icons/icon.png" gap:platform="android" gap:density="ldpi" />
<icon src="assets/icons/icon72.png" gap:platform="android" gap:density="mdpi" />
<icon src="assets/icons/iconat2x.png" gap:platform="android" gap:density="hdpi" />
<icon src="icon.png" gap:platform="winphone" />
<icon src="icon.png" width="57" height="57" gap:platform="blackberry" gap:role="default"/>


<gap:splash src="splash.png"/>
<gap:splash src="assets/splash/winphone/splash.jpg" gap:platform="winphone" />

<gap:splash src="assets/splash/ios/Default.png" width="320" height="480" gap:platform="ios"  />
<gap:splash src="assets/splash/ios/Default2x.png" width="640" height="960" gap:platform="ios" />
<gap:splash src="assets/splash/ios/DefaultLandscape.png" width="1024" height="768" gap:platform="ios" />
<gap:splash src="assets/splash/ios/DefaultPortrait.png" width="768" height="1024" gap:platform="ios" />

<gap:splash src="assets/splash/android/ldpi.png" gap:platform="android" gap:density="ldpi" />
<gap:splash src="assets/splash/android/mdpi.png" gap:platform="android" gap:density="mdpi" />
<gap:splash src="assets/splash/android/hdpi.png" gap:platform="android" gap:density="hdpi" />


<gap:splash src="assets/splash/android/ldpi.png" gap:platform="blackberry" />

<preference name="android-minSdkVersion" value="7" />
<preference name="android-maxSdkVersion" value="20" />


<preference name="orientation" value="portrait" />
<preference name="fullscreen" value="true" />

<preference name="target-device" value="universal" />




<access origin="http://cr.i-solucions.com" subdomains="true"/>
<access origin="http://pro1.i-solucions.com" subdomains="true"/>
<access origin="http://youtu.be" subdomains="true"/>
<access origin="http://phonegap.com" subdomains="true" />
<access origin="http://flickr.com" subdomains="true" />
<access origin="http://youtube.com" subdomains="true" />
<access origin="https://facebook.com" subdomains="true" />
<access origin="https://google.com" subdomains="true" />


<preference name="phonegap-version" value="2.0.0" />
<feature name="http://api.phonegap.com/1.0/battery"/>
<feature name="http://api.phonegap.com/1.0/camera"/>
<feature name="http://api.phonegap.com/1.0/contacts"/>
<feature name="http://api.phonegap.com/1.0/file"/>
<feature name="http://api.phonegap.com/1.0/geolocation"/>
<feature name="http://api.phonegap.com/1.0/media"/>
<feature name="http://api.phonegap.com/1.0/network"/>
<feature name="http://api.phonegap.com/1.0/notification"/>


</widget>
